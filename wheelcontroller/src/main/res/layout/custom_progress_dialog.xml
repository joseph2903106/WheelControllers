<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/bkfubon_custom_progress_dialog"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_vertical">

	<LinearLayout
		android:id="@+id/bktcb_custom_progress_dialog_body"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="center_vertical"
		android:background="#00ffffff">
		<ProgressBar
			android:id="@+id/bktcb_custom_progress_dialog_progress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:progressDrawable="@drawable/custom_progressbar_states"
			android:layout_gravity="center_horizontal" />
		<TextView
			android:id="@+id/progressTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal"
			android:text="讀取資料中..." />
	</LinearLayout>

</FrameLayout>